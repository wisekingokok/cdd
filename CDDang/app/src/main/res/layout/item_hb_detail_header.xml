<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_white"
              android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/red_packet_bg"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ibtn_head"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-24dp"
        app:riv_corner_radius="3dip"
        app:riv_border_width="1dip"
        app:riv_border_color="@color/color_fcd91f"
        android:src="@drawable/user_fang_icon"/>


    <TextView

        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@+id/head"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="采蘑菇的小姑娘"/>

    <TextView
        android:id="@+id/tv_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/head"
        android:text="恭喜发财,大吉大利"
        android:textColor="@color/color_7d7d7d"
        android:textSize="14sp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/red"
            android:textSize="42sp"
            tools:text="100.00"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_money"
            android:layout_gravity="bottom"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/tv_money"
            android:text="元"
            android:textColor="@color/black"
            android:textSize="14sp"/>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linear_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/color_f3f3f3"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_a8a8a8"
            tools:text="2个红包共400.00元，2秒被抢光"/>

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_646464"
            android:visibility="gone"
            tools:text="已退款"/>


    </LinearLayout>

</LinearLayout>