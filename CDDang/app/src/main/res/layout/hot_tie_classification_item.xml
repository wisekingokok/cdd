<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/classification_bg_tu_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/classification_bg_tu_iv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY" >
        </ImageView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="6dp"
            android:layout_below="@id/classification_bg_tu_iv"
            android:background="@color/pull_to_refresh_listview_divider" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/white" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/classification_tu_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                   android:scaleType="centerCrop"
            android:src="@drawable/bg_defaultbg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/classification_name_tv"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:shadowColor="#fe000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:textStyle="bold"
                android:text="爱车展厅"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <View
                android:layout_width="160dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/white" />

            <TextView
                android:id="@+id/classification_today_cnt_title_tv"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_toLeftOf="@+id/classification_today_cnt_tv"
                android:gravity="center"
                android:shadowColor="#fe000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:text="今日更新 "
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/classification_today_cnt_tv"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="18"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>