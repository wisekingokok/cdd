<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_layout_bg" >

    <ImageView
        android:id="@+id/car_friend_head_iv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:src="@drawable/user_fang_icon" />

    <TextView
        android:id="@+id/car_friend_name_tv"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/car_friend_head_iv"
        android:layout_toRightOf="@+id/car_friend_head_iv"
        android:singleLine="true"
        android:text="小哈啊好"
        android:textColor="@color/common_input_text_color"
        android:textSize="@dimen/common_fiveth" />

    <TextView
        android:id="@+id/car_friend_distance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/car_friend_head_iv"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/car_friend_sex_iv"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/common_text_color"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/car_friend_sex_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/car_friend_head_iv"
        android:layout_toRightOf="@+id/car_friend_head_iv"
        android:src="@drawable/man" />

    <TextView
        android:id="@+id/car_friend_singture_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/car_friend_head_iv"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/car_friend_name_tv"
        android:maxLines="3"
        android:text="小哈啊好"
        android:textColor="@color/common_text_color"
        android:textSize="12sp" />

    <Button
        android:id="@+id/add_friend_btn"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/common_blue_btn"
        android:text="添加"
        android:textSize="12sp"
        android:textColor="@color/white" />

</RelativeLayout>