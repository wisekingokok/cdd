<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/car_dingle_bg"
    android:orientation="vertical" >

    <include layout="@layout/common_head" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="输入您常用的邮箱地址"
        android:textColor="@color/common_green"
        android:textSize="18.0sp" />

    <EditText
        android:id="@+id/email_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_frame"
        android:hint="邮箱地址"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/common_input_text_color" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="left"
        android:text="【提示】填写您常用的邮件地址，我们将发送一份邮件到您的邮箱，请查收！" />

    <Button
        android:id="@+id/email_bind_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_button_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/common_green_btn"
        android:text="确认"
        android:gravity="center"
        android:textColor="@color/white" />

</LinearLayout>