<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/car_dingle_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/commonHead"
            layout="@layout/common_head" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/quan_padding"
        android:orientation="vertical">

        <EditText
            android:id="@+id/quan_wen_content_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ems="10"
            android:gravity="top"
            android:hint="请输入描述(最多2000字)"
            android:maxHeight="200dp"
            android:maxLength="2000"
            android:minHeight="100dp"
            android:padding="10dip"
            android:textColor="@color/common_input_text_color"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:text="最多9张"
            android:textColor="@color/grey_a5a5a5" />

        <com.chewuwuyou.app.widget.MyGridView
            android:id="@+id/quan_tu_gv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:horizontalSpacing="5dp"
            android:numColumns="4"
            android:scrollbars="none"
            android:verticalSpacing="5dp" />
    </LinearLayout>


</LinearLayout>
