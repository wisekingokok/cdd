        <LinearLayout
            android:id="@+id/yue_detail_del_share_zan_ping_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/yue_detail_edit_iv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:padding="10dip"
                android:scaleType="fitCenter"
                android:src="@drawable/item_edit_icon" />

            <TextView
                android:id="@+id/yue_detail_tv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dip"
                android:scaleType="fitCenter"
                android:text="删除"
                android:textSize="10sp"
                android:visibility="gone" />

            <com.chewuwuyou.app.widget.DrawableCenterTextView
                android:id="@+id/yue_detail_ping_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/reply"
                android:gravity="left"
                android:padding="10dip"
                android:text="(99+)"
                android:textColor="#b9b9b9"
                android:textSize="10sp" />

            <com.chewuwuyou.app.widget.DrawableCenterTextView
                android:id="@+id/yue_detail_zan_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/iconhear"
                android:gravity="left"
                android:padding="10dip"
                android:text="(99+)"
                android:textColor="#b9b9b9"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/yue_detail_zaner_ll"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="#f8f8f8"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/quan_item_divider"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/yue_detail_zaner_rl"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/quan_padding"
                android:paddingRight="@dimen/quan_padding" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/yue_detail_zaner_more_tv"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal" >

                    <GridView
                        android:id="@+id/yue_detail_zaner_gv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:horizontalSpacing="4dp"
                        android:scrollbars="none" >
                    </GridView>
                </LinearLayout>

                <TextView
                    android:id="@+id/yue_detail_zaner_more_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="6dip"
                    android:drawableRight="@drawable/common_go"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dip"
                    android:text="觉得超赞"
                    android:textColor="#c0c0c0"
                    android:textSize="10sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/yue_detail_ping_title_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dip"
        android:paddingLeft="2dip"
        android:paddingTop="10dip"
        android:text=""
        android:textColor="#b9b9b9"
        android:textSize="14sp"
        android:visibility="gone" />

</LinearLayout>