<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_login_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/register_back_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/login_back_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="请完善下列个人资料"
        android:textColor="#a1a3a6"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="以便更好的体验"
        android:textColor="#a1a3a6"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/user_head_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/register_head_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_frame_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="#a1a3a6"
            android:textSize="14.0sp" />

        <View
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/common_text_color" />

        <com.chewuwuyou.app.widget.EditTextWithDelete
            android:id="@+id/register_nick_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableRight="@drawable/search_clear"
            android:hint="请设置您的昵称"
            android:maxLength="10"
            android:padding="10dp"
            android:textColor="#a1a3a6"
            android:textColorHint="#a1a3a6"
            android:textSize="14.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_frame_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textColor="#a1a3a6"
                android:textSize="14.0sp" />

            <View
                android:layout_width="1px"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/common_text_color" />

            <RadioGroup
                android:id="@+id/choose_sex_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@+id/man_rb"
                android:orientation="horizontal"
                android:padding="10dp" >

                <RadioButton
                    android:id="@+id/man_rb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableLeft="@drawable/choose_sex_radio_button_bg"
                    android:drawablePadding="5dp"
                    android:text="男"
                    android:textColor="#a1a3a6"
                    android:textSize="16sp" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableLeft="@drawable/choose_sex_radio_button_bg"
                    android:drawablePadding="5dp"
                    android:text="男"
                    android:textColor="#a1a3a6"
                    android:visibility="invisible" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableLeft="@drawable/choose_sex_radio_button_bg"
                    android:drawablePadding="5dp"
                    android:text="男"
                    android:textColor="#a1a3a6"
                    android:visibility="invisible" />

                <RadioButton
                    android:id="@+id/woman_rb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableLeft="@drawable/choose_sex_radio_button_bg"
                    android:drawablePadding="5dp"
                    android:text="女"
                    android:textColor="#a1a3a6"
                    android:textSize="16.0sp" />
            </RadioGroup>
        </LinearLayout>

        <include layout="@layout/common_betweem_line_view" />

        <LinearLayout
            android:id="@+id/choose_age_ll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生日"
                android:textColor="#a1a3a6"
                android:textSize="14.0sp" />

            <View
                android:layout_width="1px"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/common_text_color" />

            <TextView
                android:id="@+id/age_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableRight="@drawable/common_right"
                android:hint="0岁"
                android:maxLength="10"
                android:numeric="integer"
                android:padding="10dp"
                android:text=""
                android:textColor="#a1a3a6"
                android:textColorHint="#a1a3a6"
                android:textSize="14.0sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/commit_btn"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/common_blue_btn_bg"
        android:text="提交"
        android:textColor="@color/black"
        android:textSize="16.0sp" />

</LinearLayout>
