<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_login_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/forget_password_back_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="45dp"
        android:padding="14dp"
        android:src="@drawable/login_back_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_frame_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/register_phone_icon" />

        <View
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/common_text_color" />

        <com.chewuwuyou.app.widget.EditTextWithDelete
            android:id="@+id/forget_password_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableRight="@drawable/search_clear"
            android:hint="手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:padding="10dp"
            android:text=""
            android:textColor="#a1a3a6"
            android:textColorHint="#929292"
            android:textSize="15.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_frame_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yanzhengma_icon" />

        <View
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/common_text_color" />

        <EditText
            android:id="@+id/forget_password_auth_code_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="验证码"
            android:inputType="number"
            android:maxLength="4"
            android:padding="10dp"
            android:text=""
            android:textColor="#a1a3a6"
            android:textColorHint="#a1a3a6"
            android:textSize="15sp" />

        <Button
            android:id="@+id/get_auth_code_btn"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/common_blue_btn"
            android:text="获取验证码"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_frame_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/register_suo_icon" />

        <View
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/common_text_color" />

        <com.chewuwuyou.app.widget.EditTextWithDelete
            android:id="@+id/forget_password_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableRight="@drawable/search_clear"
            android:hint="请设置您的密码(6-16个字符)"
            android:inputType="textPassword"
            android:maxLength="16"
            android:padding="10dp"
            android:text=""
            android:textColor="#a1a3a6"
            android:textColorHint="#a1a3a6"
            android:textSize="14.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_frame_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/register_suo_icon" />

        <View
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/common_text_color" />

        <com.chewuwuyou.app.widget.EditTextWithDelete
            android:id="@+id/forget_password_password_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableRight="@drawable/search_clear"
            android:hint="请确认您的密码(6-16个字符)"
            android:inputType="textPassword"
            android:maxLength="16"
            android:padding="10dp"
            android:text=""
            android:textColor="#a1a3a6"
            android:textColorHint="#a1a3a6"
            android:textSize="14.0sp" />
    </LinearLayout>

