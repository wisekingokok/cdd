<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/headerbar"
        layout="@layout/common_head" />

    <RadioGroup
        android:id="@+id/pl_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/carservice_type_car_nianjian"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/hp_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_tab_bg2"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="好评\n(0)"
            android:textColor="@color/radiobutton_text_color2"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/zp_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_tab_bg2"
            android:button="@null"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="中评\n(0)"
            android:textColor="@color/radiobutton_text_color2"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/cp_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_tab_bg2"
            android:button="@null"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="差评\n(0)"
            android:textColor="@color/radiobutton_text_color2"
            android:textSize="13sp" />
    </RadioGroup>

    <include layout="@layout/common_line_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </FrameLayout>

        <!--
        <fragment
            android:id="@+id/fragment_good"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            class="com.chewuwuyou.app.fragment.EvaluationListFragment" />

        <fragment
            android:id="@+id/fragment_center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            class="com.chewuwuyou.app.fragment.EvaluationListFragment" />

        <fragment
            android:id="@+id/fragment_poor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            class="com.chewuwuyou.app.fragment.EvaluationListFragment" />
        -->
    </LinearLayout>

</LinearLayout>