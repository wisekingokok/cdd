<?xml version="1.0" encoding="utf-8"?>
<com.barcode.view.SweepLayout xmlns:android="http://schemas.android.com/apk/res/android"
                              xmlns:app="http://schemas.android.com/apk/res-auto"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              app:holderwidth="100dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_blacklist_head"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:id="@+id/item_black_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:layout_toRightOf="@id/item_blacklist_head"
                android:text="  "/>

            <!--<TextView
                android:id="@+id/item_black_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_black_name"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/item_blacklist_head"
                android:text=" xxx"
                android:textColor="@color/darkgray"
                android:textSize="12sp"/>-->
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/delete"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#c7c7c7"
        android:gravity="center"
        android:text="移除黑名单"
        android:textColor="@color/white"/>

</com.barcode.view.SweepLayout>
