<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:text="您的订单提交成功了!"
        android:textColor="@color/common_input_text_color"
        android:textSize="20.0sp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:text="车当当坐席会尽快和您联系确认。"
        android:textColor="@color/common_text_color"
        android:textSize="16.0sp" />

    <RelativeLayout
        android:id="@+id/release_task_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:layout_centerHorizontal="true" >

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="您可以在我的订单了解到任务进度。"
            android:textColor="@color/common_text_color"
            android:textSize="16.0sp" />

        <Button
            android:id="@+id/back_home_page_btn"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_button_height"
            android:layout_alignLeft="@+id/text3"
            android:layout_alignRight="@+id/text3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/common_blue_btn_bg"
            android:text="返回主页"
            android:textColor="@color/white" />

        <!--
        <Button
            android:id="@+id/release_btn"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text3"
            android:layout_below="@+id/text3"
            android:layout_marginTop="20dp"
            android:background="@drawable/common_orange_btn"
            android:text="继续发布"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/order_manager_btn"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/text3"
            android:layout_below="@+id/text3"
            android:layout_marginTop="20dp"
            android:background="@drawable/common_green_btn"
            android:text="我的订单"
            android:textColor="@color/white" />
        -->
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/release_task_layout" >
    </LinearLayout>

</RelativeLayout>