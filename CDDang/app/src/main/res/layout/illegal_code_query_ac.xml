<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/car_dingle_bg"
              android:orientation="vertical">

    <include layout="@layout/common_head"/>


    <!--<it.neokree.materialtabs.MaterialTabHost-->
    <!--android:id="@+id/materialTabHost"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="48dp"-->
    <!--app:accentColor="@color/new_blue"-->
    <!--app:primaryColor="@color/white"-->
    <!--app:textColor="@color/new_blue"/>-->
    <RadioGroup
        android:id="@+id/tabs"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/checkbox_dq"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:checked="true"
            android:drawableBottom="@drawable/my_order_tab_drawable2"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="地区代码"
            android:textColor="@drawable/status_bar_color" />

        <RadioButton
            android:id="@+id/checkbox_wz"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableBottom="@drawable/my_order_tab_drawable2"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="违章代码"
            android:textColor="@drawable/status_bar_color" />
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>