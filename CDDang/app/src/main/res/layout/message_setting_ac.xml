<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/common_head" />

    <include layout="@layout/common_line_view" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_layout_bg" >

        <TextView
            android:id="@+id/notification_setting"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_layout_bg"
            android:padding="10dp"
            android:text="通知设置"
            android:textColor="@color/common_input_text_color" />

        <CheckBox
            android:id="@+id/notification_setting_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/notification_switch_bg"
            android:button="@null"
            android:checked="true" />
    </RelativeLayout>

    <include layout="@layout/common_line_view" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_layout_bg" >

        <TextView
            android:id="@+id/sound_setting_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_layout_bg"
            android:padding="10dp"
            android:text="语音设置"
            android:textColor="@color/common_input_text_color" />

        <CheckBox
            android:id="@+id/sound_setting_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/notification_switch_bg"
            android:button="@null"
            android:checked="true" />
    </RelativeLayout>

    <include layout="@layout/common_line_view" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_layout_bg" >

        <TextView
            android:id="@+id/shake_setting_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_layout_bg"
            android:padding="10dp"
            android:text="震动设置"
            android:textColor="@color/common_input_text_color" />

        <CheckBox
            android:id="@+id/shake_setting_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/notification_switch_bg"
            android:button="@null"
            android:checked="true" />
    </RelativeLayout>

    <include layout="@layout/common_line_view" />

</LinearLayout>