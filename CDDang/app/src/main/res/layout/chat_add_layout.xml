<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <TextView
                android:id="@+id/tv_camera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/tv_camera"
                android:gravity="center"
                android:text="照相"
                android:textColor="@color/common_text_color" />

            <TextView
                android:id="@+id/tv_picture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/tv_picture"
                android:gravity="center"
                android:text="照片库"
                android:textColor="@color/common_text_color" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/tv_local"
                android:gravity="center"
                android:text="我的位置"
                android:textColor="@color/common_text_color" />

            <TextView
                android:id="@+id/tv_delete_chat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/delete_chat"
                android:gravity="center"
                android:text="粉碎聊天"
                android:textColor="@color/common_text_color" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:weightSum="4">

            <TextView
                android:id="@+id/tv_call"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/tv_call"
                android:gravity="center"
                android:text="电话联系"
                android:textColor="@color/common_text_color" />

            <TextView
                android:id="@+id/tv_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/tv_order"
                android:gravity="center"
                android:text="给TA下单"
                android:textColor="@color/common_text_color" />

            <TextView
                android:id="@+id/tv_mail_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/mail_address"
                android:gravity="center"
                android:text="邮寄地址"
                android:textColor="@color/common_text_color" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>