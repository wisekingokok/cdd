<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.chewuwuyou.app.ui.NewFriendActivity">


    <include layout="@layout/common_head"/>

    <EditText
        android:id="@+id/search_friend_phone_et"
        style="@style/commen_margin_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/editext_grey"
        android:drawableLeft="@drawable/search"
        android:drawablePadding="8dp"
        android:hint="手机号/昵称"
        android:singleLine="true"
        android:textColorHint="#898989"
        android:textSize="14sp"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <ListView
            android:id="@+id/lv_contacts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#000000"
            android:divider="@null"
            android:fadingEdge="none"
            android:scrollbars="none"
            android:scrollingCache="false"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/dialog"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/new_blue"
            android:textSize="30.0dip"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textview_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:drawablePadding="16dp"
            android:drawableTop="@drawable/no_friends"
            android:gravity="center"
            android:text=" 亲，还没有好友申请哦"
            android:textColor="#dddddd"
            android:textSize="14sp"
            android:visibility="visible"/>

    </FrameLayout>


</LinearLayout>
