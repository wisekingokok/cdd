<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical" >

    <include layout="@layout/common_head" />

    <TextView
        android:id="@+id/vehicle_empty_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80.0dip"
        android:gravity="center"
        android:text="@string/no_vehicle_txt"
        android:textColor="#cccccc"
        android:textSize="18sp"
        android:visibility="gone" />

    <android.support.v4.view.ViewPager
        android:id="@+id/choice_vehicle_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="60dip"
        android:paddingTop="20dip" >

        <Button
            android:id="@+id/delete_vehicle_btn"
            android:layout_width="@dimen/common_button_width"
            android:layout_height="@dimen/common_button_height"
            android:layout_marginRight="20dip"
            android:background="@drawable/common_orange_btn"
            android:text="删除"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/update_vehicle_btn"
            android:layout_width="@dimen/common_button_width"
            android:layout_height="@dimen/common_button_height"
            android:background="@drawable/common_green_btn"
            android:text="修改"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>