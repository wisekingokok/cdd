<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="您的订单拆分成功了!"
        android:textColor="@color/common_text_color"
        android:textSize="20.0sp" />

    <View
        android:id="@+id/view_line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/text1"
        android:layout_marginTop="10dp"
        android:background="@color/common_line_color" />
	
    <RelativeLayout
        android:id="@+id/release_task_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请等待商家回复。您可以在我的“订单管理-外派订单”了解到任务进度。"
            android:textColor="@color/common_text_color"
            android:textSize="16.0sp" />

        <Button
            android:id="@+id/back_my_order_btn"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_button_height"
            android:layout_alignLeft="@+id/text3"
            android:layout_alignRight="@+id/text3"
            android:layout_below="@+id/text3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/common_blue_btn_bg"
            android:text="返回我的订单"
            android:textColor="@color/white" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/release_task_layout" >
    </View>

</RelativeLayout>