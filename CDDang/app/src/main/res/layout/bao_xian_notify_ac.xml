<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/car_dingle_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/baoxian_notify_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dip"
        android:background="@color/white"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/baoxian_notify_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="30dip"
            android:text="保险到期剩余天数"
            android:textColor="#333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/baoxian_notify_days_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/baoxian_notify_title_tv"
            android:gravity="center"
            android:paddingTop="30dip"
            android:text="0天"
            android:paddingBottom="10dp"
            android:textColor="#57bff0"
            android:textSize="25sp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/baoxian_count_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_button_height"
        android:layout_below="@+id/baoxian_notify_rl"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/common_blue_btn_bg"
        android:text="进入计算"
        android:textColor="@color/white"
        android:textSize="16.0sp" />

</RelativeLayout>