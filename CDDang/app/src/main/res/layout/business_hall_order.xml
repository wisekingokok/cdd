<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_layout_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dp"
        android:button="@drawable/order_checkbox_bg"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:paddingRight="5dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/common_line_view" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView
                android:id="@+id/text_service_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/common_num_three_textSize" />

            <TextView
                android:id="@+id/text_order_status_tv"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/baojia_frame"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="#e05f20"
                android:textSize="12sp" />
        </RelativeLayout>

        <include layout="@layout/common_line_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/service_project_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:text=""
                android:textColor="@color/new_blue"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_ordernum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/common_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_ordertime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/common_text_color"
                android:textSize="12sp" />
        </LinearLayout>

        <include layout="@layout/common_line_view" />
    </LinearLayout>

</LinearLayout>