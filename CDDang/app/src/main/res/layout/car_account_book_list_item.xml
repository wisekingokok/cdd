<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_layout_bg"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/record_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:text="12"
        android:padding="10dp"
        android:textColor="@color/common_text_color"
        android:textSize="16.0sp" />

    <TextView
        android:id="@+id/record_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/record_type"
        android:text="12"
        android:textColor="@color/common_text_color"
        android:textSize="16.0sp" />

    <TextView
        android:id="@+id/record_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/common_go"
        android:gravity="left"
        android:text="123"
        android:textColor="@color/orange"
        android:textSize="16.0sp" />

    <ImageView
        android:id="@+id/common_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/common_right" />

</RelativeLayout>