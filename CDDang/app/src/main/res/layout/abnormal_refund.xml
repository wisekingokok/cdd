<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/wallet_background">

    <include layout="@layout/common_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/order_abnormal_img"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_height="100dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:textColor="@color/red"
                    android:gravity="center"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:text="你的订单出现异常，已为你退款!"
                    android:textColor="@color/red"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/red"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="10dp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="退款金额："
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/order_refund_money"
                        android:layout_width="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="1dp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:orientation="horizontal"

                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="退款类型："
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="退款到余额"
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp" />
            </LinearLayout>

            <Button
                android:id="@+id/abnormal_money"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="知道了"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_abnormal_purple"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="bottom"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:text="联系客服"
                android:textColor="#888888"
                android:textSize="14sp"

                android:gravity="center"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/abnormal_service"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="400 800 9988"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/abnormal_contact"
                android:textColor="#49caaa"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
