<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:padding="10dip" >

    <TextView
        android:id="@+id/yue_item_header_num_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/quan_padding"
        android:paddingLeft="@dimen/quan_padding"
        android:paddingRight="@dimen/quan_padding"
        android:text="旅行自驾 (283)"
        android:textColor="#333333"
        android:textSize="14sp"
        android:visibility="gone" >
    </TextView>

    <RelativeLayout
        android:id="@+id/yue_item_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/yue_item_header_num_tv"
        android:background="@color/white"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/yue_item_info_iv"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:scaleType="fitXY"
            android:src="@drawable/cddbg1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="128dip"
            android:layout_marginLeft="@dimen/quan_padding"
            android:layout_toRightOf="@id/yue_item_info_iv"
            android:orientation="vertical"
            android:paddingBottom="4dip"
            android:paddingRight="8dip"
            android:paddingTop="4dip" >

            <RelativeLayout
                android:id="@+id/yue_item_title_android_delete_rl"
                android:layout_width="match_parent"
                android:layout_height="24dip" >

                <TextView
                    android:id="@+id/yue_item_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|left"
                    android:singleLine="true"
                    android:text="饭后百步走"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/yue_item_delete_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="删除"
                    android:textColor="#5b6e82"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/yue_item_charge_type_tv"
                android:layout_width="match_parent"
                android:layout_height="24dip"
                android:layout_below="@+id/yue_item_title_android_delete_rl"
                android:gravity="center_vertical|left"
                android:text="大家AA"
                android:textColor="@color/orange"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/yue_item_location_tv"
                android:layout_width="match_parent"
                android:layout_height="24dip"
                android:layout_below="@+id/yue_item_charge_type_tv"
                android:drawableLeft="@drawable/yue_item_address"
                android:drawablePadding="6dip"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="成都市锦江区盐市口新中兴2楼"
                android:textColor="#c0c0c0"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/yue_item_available_date_tv"
                android:layout_width="match_parent"
                android:layout_height="24dip"
                android:layout_below="@+id/yue_item_location_tv"
                android:drawableLeft="@drawable/yue_start_date"
                android:drawablePadding="6dip"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="7月23日 星期四 20:30"
                android:textColor="#c0c0c0"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/yue_item_involve_tv"
                android:layout_width="match_parent"
                android:layout_height="24dip"
                android:layout_below="@+id/yue_item_available_date_tv"
                android:drawableLeft="@drawable/yue_item_involve"
                android:drawablePadding="6dip"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="10人感兴趣"
                android:textColor="#c0c0c0"
                android:textSize="10sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>