<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_car_bottom_ac"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/car_dingle_bg"
    android:orientation="vertical" >

    <include layout="@layout/common_head" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 金额 -->

        <RelativeLayout
            android:id="@+id/amount_of_money"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@color/white" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/rmb"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="金额"
                android:textColor="@color/common_text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:text="600元"
                android:textColor="@color/orange"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/common_line_color" />
        <!-- 类别 -->

        <RelativeLayout
            android:id="@+id/category_layout"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@color/white" >

            <TextView
                android:id="@+id/category_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="类别"
                android:textColor="@color/common_text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/display_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/category_tv"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:text="车险"
                android:textColor="@color/common_text_color"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/common_line_color" />
        <!-- 日期 -->

        <RelativeLayout
            android:id="@+id/date_layout"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@color/white" >

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="日期"
                android:textColor="@color/common_text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/display_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/date_tv"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:text="2014-06-06"
                android:textColor="@color/common_text_color"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/common_line_color" />
        <!-- 备注 -->

        <RelativeLayout
            android:id="@+id/remark_layout"
            android:layout_width="fill_parent"
            android:minHeight="40dp"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <TextView
                android:id="@+id/remark_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:text="备注"
                android:layout_centerVertical="true"
                android:textColor="@color/common_text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/remark_tv"
                android:gravity="right"
                android:maxLength="150"
                android:textColor="@color/common_text_color"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/common_line_color" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_button_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/common_red_btn_bg"
        android:padding="5dp"
        android:text="删除此条记录"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>