<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/common_dialog_bg" >

    <LinearLayout
        android:id="@+id/version_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/version_title_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="新版本"
            android:textColor="@color/common_text_color"
            android:textSize="16.0sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/common_line_color" />

        <TextView
            android:id="@+id/versionName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="版本信息:1.1.0"
            android:textColor="@color/common_text_color"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/update_log"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="修复若干BUG"
            android:textColor="@color/common_text_color"
            android:textSize="16.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/not_update_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/version_layout"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/not_update_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/cancel_update_btn_bg"
            android:text="忽略"
            android:textColor="@color/white" />

        <View
            android:layout_width="1px"
            android:layout_height="30dp"
            android:background="@color/white" />

        <Button
            android:id="@+id/update_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/update_btn_bg"
            android:text="立即更新"
            android:textColor="@color/white" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:layout_below="@id/not_update_ll" />

</RelativeLayout>