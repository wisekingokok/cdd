<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/car_dingle_bg"
    android:orientation="vertical" >

    <include layout="@layout/common_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/choice_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/top_successful" />

        <TextView
            android:id="@+id/choice_successful"
            android:layout_width="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content"
            android:text="充值成功"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/choice_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本次充值金额为0.00"
            android:layout_marginTop="2dp"
            android:textColor="#838383"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/choice_continuechoice"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/common_blue_btn_bg"
            android:text="继续充值"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>