<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.SafeSettingActivity">


    <include layout="@layout/common_head"/>

    <LinearLayout
        android:id="@+id/password_manager_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/common_layout_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="密码管理"
            android:textColor="@color/common_input_text_color"
            android:textSize="14.0sp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/common_right"
            android:padding="10dp"
            android:text="点击找回你的密码"
            android:textSize="14.0sp"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@drawable/line_hui"/>

    <LinearLayout
        android:id="@+id/phone_bind_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_layout_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="重置密码"
            android:textColor="@color/common_input_text_color"
            android:textSize="14.0sp"/>

        <TextView
            android:id="@+id/bind_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/common_right"
            android:padding="10dp"
            android:text="点击重置密码"
            android:textSize="14.0sp"/>
    </LinearLayout>


    <include layout="@layout/common_line_view"/>



</LinearLayout>
