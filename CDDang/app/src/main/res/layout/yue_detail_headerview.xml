<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/car_dingle_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingTop="10dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="10dip" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <ImageView
                android:id="@+id/yue_detail_avatar_iv"
                android:layout_width="@dimen/quan_avatar_width"
                android:layout_height="@dimen/quan_avatar_height"
                android:layout_alignParentLeft="true"
                android:src="@drawable/user_yuan_icon" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/yue_detail_avatar_iv"
                android:orientation="vertical"
                android:paddingLeft="10dip" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/yue_detail_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="58同城怎么审核通过"
                        android:textColor="#5b6e82"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/yue_detail_sex_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="16dip"
                        android:layout_toRightOf="@id/yue_detail_name_tv"
                        android:src="@drawable/man" />

                    <TextView
                        android:id="@+id/yue_detail_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="三天前"
                        android:textColor="#c0c0c0"
                        android:textSize="10sp" />
                </RelativeLayout>

                <com.chewuwuyou.app.widget.DrawableCenterTextView
                    android:id="@+id/yue_detail_area_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/business_details_sjdz"
                    android:paddingTop="6dip"
                    android:text="成都市"
                    android:textColor="#c0c0c0"
                    android:textSize="10sp"
                    android:visibility="invisible" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/yue_detail_title_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:paddingLeft="@dimen/quan_padding"
            android:paddingRight="@dimen/quan_padding"
            android:text="喜欢hah"
            android:textColor="@color/common_input_text_color"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/quan_padding" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="18dip"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="2dip"
                android:paddingTop="2dip" >

                <ImageView
                    android:id="@+id/yue_detail_charge_type_info_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon_money" />

                <TextView
                    android:id="@+id/yue_detail_charge_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/quan_padding"
                    android:layout_toRightOf="@id/yue_detail_charge_type_info_iv"
                    android:gravity="center_vertical"
                    android:text="AA"
                    android:textColor="@color/red"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/yue_detail_charge_type_info_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/quan_padding"
                    android:layout_toRightOf="@id/yue_detail_charge_type_tv"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#d3d3d3"
                    android:textSize="10sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="18dip"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="2dip"
                android:paddingTop="2dip" >

                <ImageView
                    android:id="@+id/yue_detail_sex_info_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon_sex" />

                <ImageView
                    android:id="@+id/yue_detail_sex_type_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/quan_padding"
                    android:layout_toRightOf="@id/yue_detail_sex_info_iv"
                    android:src="@drawable/male" />

                <TextView
                    android:id="@+id/yue_detail_sex_info_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/quan_padding"
                    android:layout_toRightOf="@id/yue_detail_sex_type_iv"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#d3d3d3"
                    android:textSize="10sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="18dip"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="2dip"
                android:paddingTop="2dip"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/yue_detail_valid_date_info_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon_date" />

                <TextView
                    android:id="@+id/yue_detail_valid_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/quan_padding"
                    android:layout_toRightOf="@id/yue_detail_valid_date_info_iv"
                    android:gravity="center_vertical"
                    android:text="2015年1月7日-2015年3月4日"
                    android:textColor="@color/common_input_text_color"
                    android:textSize="10sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/yue_detail_involver_ll"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="#f8f8f8"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/quan_item_divider"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/yue_detail_involver_rl"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/quan_padding"
                android:paddingRight="@dimen/quan_padding" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/yue_detail_involver_more_tv"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal" >

                    <GridView
                        android:id="@+id/yue_detail_involver_gv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:horizontalSpacing="4dp"
                        android:scrollbars="none" >
                    </GridView>
                </LinearLayout>

                <TextView
                    android:id="@+id/yue_detail_involver_more_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="6dip"
                    android:drawableRight="@drawable/common_go"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dip"
                    android:text="想参加活动"
                    android:textColor="#c0c0c0"
                    android:textSize="10sp" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/yue_detail_content_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/quan_padding"
            android:paddingRight="10dip"
            android:text="累惨了"
            android:textColor="#333333"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/yue_detail_tu_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:orientation="vertical"
            android:visibility="visible" >

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f8f8f8"
                android:fadingEdge="none"
                android:padding="10dip"
                android:scrollbars="none" >

                <LinearLayout
                    android:id="@+id/yue_detail_tus_inner_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="horizontal" >

                    <com.chewuwuyou.app.widget.MyGridView
                        android:id="@+id/yue_detail_tus_gv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fadingEdge="none"
                        android:horizontalSpacing="@dimen/quan_tu_interval"
                        android:listSelector="@null" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

