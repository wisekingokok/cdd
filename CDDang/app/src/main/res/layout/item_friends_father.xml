<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/friends_img_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/friends_father_img"/>

            <TextView
                android:id="@+id/group_personal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:background="@color/white"
                android:textColor="@color/gray_deep"
                tools:text="我的好友"
                android:textSize="16sp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/group_child_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:background="@color/white"
                android:textColor="@color/color_55000000"
                tools:text="(10)"
                android:gravity="center_vertical"/>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/friends_lay"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/wallet_background"/>

</LinearLayout>
