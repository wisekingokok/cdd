<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/wallet_background"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bank_img"
            android:layout_width="54dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/a1_audi"
            android:scaleType="centerCrop"
            android:layout_height="54dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/bank_name"
                android:layout_width="match_parent"
                android:text="上海银行"
                android:textColor="@color/black"
                android:textSize="@dimen/tf_size_14"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/bank_remarks"
                android:layout_width="match_parent"
                android:text="上海银行"
                android:layout_marginTop="6dp"
                android:textSize="@dimen/tf_size_12"
                android:textColor="@color/darkgray"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/bank_mobile"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/tf_size_14"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/bank_next_mobile"
            android:layout_width="match_parent"
            android:hint="@string/bank_mobile_remarks"
            android:background="@null"
            android:textSize="@dimen/tf_size_12"
            android:textColorHint="@color/darkgray"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/add_bank_next"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="@string/xiayibu"
        android:layout_marginRight="10dp"
        android:background="@drawable/login_btn_bg"
        android:textColor="@color/white"
        android:layout_height="44dp" />

</LinearLayout>
